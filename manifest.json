{
    "manifest_version": 3,
    "name": "GitLab Pipeline Variables",
    "version": "1.0",
    "description": "Display GitLab pipeline variables.",
    "permissions": [
      "activeTab",
      "clipboardRead",
      "clipboardWrite"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "gitlab-show-pipeline-variables-48.png",
      "64": "gitlab-show-pipeline-variables-64.png",
      "96": "gitlab-show-pipeline-variables-96.png",
      "128": "gitlab-show-pipeline-variables-128.png"
    }
  }